<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <UseWinUI>false</UseWinUI>
    <AssemblyTitle>ASRPro</AssemblyTitle>
    <AssemblyDescription>Automatic Speech Recognition for Windows</AssemblyDescription>
    <AssemblyCompany>ASRPro</AssemblyCompany>
    <AssemblyProduct>ASRPro</AssemblyProduct>
    <AssemblyCopyright>Copyright Â© 2023 ASRPro. All rights reserved.</AssemblyCopyright>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="FFMpegCore" Version="5.1.0" />
    <!-- WPF UI by lepoco for modern Fluent styles -->
    <PackageReference Include="WPF-UI" Version="4.0.1" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\..\docs\assets\icon-32x32.png">
      <Link>icon.png</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
