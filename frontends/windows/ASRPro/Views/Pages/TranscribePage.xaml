<Page x:Class="ASRPro.Views.Pages.TranscribePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Margin="24">
        <ui:Card>
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <ui:TextBlock Text="Transcribe File" FontSize="24" FontWeight="SemiBold" />
                    <ui:TextBlock Text="Upload audio/video and get transcriptions." FontSize="12" Opacity="0.7" />
                </StackPanel>

                <ScrollViewer Grid.Row="1" Margin="0,16,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ui:Card>
                            <StackPanel>
                                <Border x:Name="DropZone"
                                        Background="{DynamicResource UiBrushControlBackground}"
                                        BorderBrush="{DynamicResource UiBrushControlBorder}" BorderThickness="1"
                                        CornerRadius="8" Height="120" Margin="0,0,0,16"
                                        AllowDrop="True" Drop="DropZone_Drop"
                                        DragEnter="DropZone_DragEnter" DragLeave="DropZone_DragLeave">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <ui:SymbolIcon Symbol="DocumentAdd24" HorizontalAlignment="Center" />
                                        <ui:TextBlock Text="Drop file here or click to browse" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel Orientation="Horizontal">
                                    <ui:Button Content="Browse..." Click="BrowseButton_Click" />
                                    <ui:Button x:Name="TranscribeButton" Content="Transcribe" Margin="8,0,0,0" Click="TranscribeButton_Click" />
                                </StackPanel>

                                <ProgressBar x:Name="TranscriptionProgress" Height="6" Visibility="Collapsed" />
                                <ui:TextBlock x:Name="ProgressText" FontSize="11" Opacity="0.7" Visibility="Collapsed" />
                            </StackPanel>
                        </ui:Card>

                        <ui:Card Margin="0,12,0,0">
                            <StackPanel>
                                <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                                    <TextBlock x:Name="ResultsTextBlock" Text="Transcription results will appear here..." TextWrapping="Wrap" />
                                </ScrollViewer>
                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                    <ui:Button x:Name="CopyButton" Content="Copy Text" Click="CopyButton_Click" IsEnabled="False" />
                                    <ui:Button x:Name="SaveButton" Content="Save as TXT" Margin="8,0,0,0" Click="SaveButton_Click" IsEnabled="False" />
                                </StackPanel>
                            </StackPanel>
                        </ui:Card>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </ui:Card>
    </Grid>
</Page>
