<Window x:Class="ASRPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASRPro - Windows Frontend" Height="500" Width="700"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ASRPro" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="Automatic Speech Recognition for Windows" FontSize="12" 
                       Foreground="Gray" HorizontalAlignment="Center"/>
        </StackPanel>
        
        <!-- Status Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="Backend Status:" FontWeight="Bold"/>
            <TextBlock x:Name="StatusTextBlock" Text="Not Connected" Foreground="Red" Margin="5,0,0,0"/>
        </StackPanel>
        
        <!-- Content Section -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Transcription Results Label -->
            <TextBlock Grid.Row="0" Text="Transcription Results" FontWeight="Bold" 
                       VerticalAlignment="Top" HorizontalAlignment="Left"/>
            
            <!-- Transcription Results TextBox -->
            <TextBox x:Name="ResultsTextBox" Grid.Row="1" 
                     Text="Transcription results will appear here..."
                     Margin="0,25,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        </Grid>
        
        <!-- Control Buttons Section -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="TranscribeButton" Content="Transcribe" 
                    Click="TranscribeButton_Click" IsDefault="True"/>
            <Button x:Name="BrowseButton" Content="Browse Audio Files" 
                    Click="BrowseButton_Click"/>
            <Button x:Name="SettingsButton" Content="Settings" 
                    Click="SettingsButton_Click"/>
        </StackPanel>
        
        <!-- Progress Indicator (Initially Hidden) -->
        <Grid x:Name="ProgressOverlay" Grid.Row="0" Grid.RowSpan="4" Background="#80000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Height="20" Width="200" Margin="0,0,0,10"/>
                <TextBlock x:Name="ProgressText" Text="Transcribing..." HorizontalAlignment="Center" 
                           Foreground="White" FontSize="14"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>