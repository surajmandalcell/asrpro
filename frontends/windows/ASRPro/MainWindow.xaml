<ui:FluentWindow x:Class="ASRPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:ip="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="ASRPro"
        Height="850" Width="1300"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Border Background="#1e1e1e" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <ui:TitleBar Grid.Row="0" Title="ASRPro" Icon="Audio" />

            <!-- Fluent Sidebar (prebuilt) + Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <ui:NavigationView x:Name="Nav"
                                   Grid.Column="0"
                                   PaneDisplayMode="Left"
                                   IsBackButtonVisible="Collapsed"
                                   IsPaneOpen="True"
                                   OpenPaneLength="260"
                                   CompactPaneLength="56"
                                   AlwaysShowHeader="False"
                                   SelectionChanged="Nav_SelectionChanged">
                    <ui:NavigationView.MenuItems>
                        <ui:NavigationViewItem Tag="toggle-pane">
                            <StackPanel Orientation="Horizontal">
                                <ip:PackIconLucide Kind="Menu" Width="20" Height="20" />
                                <TextBlock Text="Menu" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Tag="transcribe">
                            <StackPanel Orientation="Horizontal">
                                <ip:PackIconLucide Kind="Mic" Width="20" Height="20" />
                                <TextBlock Text="Transcribe" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Tag="settings">
                            <StackPanel Orientation="Horizontal">
                                <ip:PackIconLucide Kind="Settings" Width="20" Height="20" />
                                <TextBlock Text="Settings" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:NavigationViewItem>
                        <ui:NavigationViewItem Tag="docs">
                            <StackPanel Orientation="Horizontal">
                                <ip:PackIconLucide Kind="Link" Width="20" Height="20" />
                                <TextBlock Text="API Docs" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:NavigationViewItem>
                    </ui:NavigationView.MenuItems>
                    <ui:NavigationView.FooterMenuItems>
                        <ui:NavigationViewItem Tag="exit">
                            <StackPanel Orientation="Horizontal">
                                <ip:PackIconLucide Kind="Power" Width="20" Height="20" />
                                <TextBlock Text="Exit" Margin="8,0,0,0"/>
                            </StackPanel>
                        </ui:NavigationViewItem>
                    </ui:NavigationView.FooterMenuItems>
                </ui:NavigationView>

                <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
            </Grid>
        </Grid>
    </Border>
</ui:FluentWindow>
