<ui:FluentWindow x:Class="ASRPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="ASRPro"
        Height="850" Width="1300"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Border Background="#1e1e1e" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title bar -->
            <ui:TitleBar Grid.Row="0" Title="ASRPro" Icon="Audio" />

            <!-- Minimal Sidebar + Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{DynamicResource UiBrushControlBackground}">
                    <StackPanel Margin="12">
                        <ui:Button x:Name="BtnTranscribe" Content="Transcribe" Click="BtnTranscribe_Click" Appearance="Secondary" Margin="0,0,0,6" />
                        <ui:Button x:Name="BtnSettings" Content="Settings" Click="BtnSettings_Click" Appearance="Secondary" Margin="0,0,0,6" />
                        <ui:Button x:Name="BtnDocs" Content="API Docs" Click="BtnDocs_Click" Appearance="Secondary" />
                    </StackPanel>
                </Border>

                <Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden" />
            </Grid>
        </Grid>
    </Border>
</ui:FluentWindow>
