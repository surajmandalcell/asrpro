<Window x:Class="ASRPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Spokenly" Height="850" Width="1300"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="Icon" Text="{TemplateBinding Tag}"
                                          FontFamily="Segoe MDL2 Assets"
                                          FontSize="18"
                                          Margin="0,0,10,0"
                                          VerticalAlignment="Center"/>
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#3b5bdb"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="ModelCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="BorderBrush" Value="#2f2f2f"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,14"/>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="7"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextElement.Foreground="{TemplateBinding Foreground}"
                                            TextElement.FontFamily="Segoe MDL2 Assets"
                                            TextElement.FontSize="8"
                                            Opacity="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                <Setter Property="ContentPresenter.Opacity" Value="1" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Window Header -->
        <Border Background="#2a2a2a"
                Height="44"
                VerticalAlignment="Top"
                CornerRadius="12,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Header -->
                <Border Grid.Column="0" Background="Transparent" MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="20,0">
                        <!-- Window Controls -->
                        <StackPanel Orientation="Horizontal">
                            <Button x:Name="CloseButton"
                                    Background="#ff5f57"
                                    Foreground="#8b0000"
                                    Content="&#xE8BB;"
                                    Click="CloseButton_Click"
                                    Style="{StaticResource WindowControlButtonStyle}"/>
                            <Button x:Name="MinimizeButton"
                                    Background="#ffbd2e"
                                    Foreground="#8b4513"
                                    Content="&#xE949;"
                                    Click="MinimizeButton_Click"
                                    Style="{StaticResource WindowControlButtonStyle}"/>
                            <Button x:Name="MaximizeButton"
                                    Background="#28ca42"
                                    Foreground="#006400"
                                    Content="&#xE922;"
                                    IsEnabled="False"
                                    Opacity="0.5"
                                    Style="{StaticResource WindowControlButtonStyle}"
                                    Margin="0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Right Header -->
                <Border Grid.Column="1" Background="#1e1e1e" MouseLeftButtonDown="HeaderBorder_MouseLeftButtonDown"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="0,44,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0"
                    Background="#2a2a2a"
                    CornerRadius="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="0" Margin="20,18,20,0">
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE713;"
                                Content="General Settings"
                                Click="NavButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE7AC;"
                                Content="Dictation Models"
                                Click="NavButton_Click"/>
                        <Button Style="{StaticResource ActiveSidebarButtonStyle}"
                                Tag="&#xE7C3;"
                                Content="Transcribe File"
                                Click="NavButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE81C;"
                                Content="History"
                                Click="NavButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE765;"
                                Content="Keyboard Controls"
                                Click="NavButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE8BD;"
                                Content="AI Prompts"
                                Click="NavButton_Click"/>
                        <Button x:Name="DocsButton"
                                Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE736;"
                                Content="API Documentation"
                                Click="DocsButton_Click"/>
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Tag="&#xE946;"
                                Content="About"
                                Click="NavButton_Click"/>
                    </StackPanel>

                    <!-- Version -->
                    <TextBlock Grid.Row="1"
                              Text="#56d00bf"
                              Foreground="#6a6a6a"
                              FontSize="11"
                              Margin="20,8,20,20"
                              HorizontalAlignment="Left"/>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Border Grid.Column="1"
                    Background="#1e1e1e"
                    CornerRadius="0,0,12,0">
                <Grid Margin="48,16,48,32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Page Header -->
                    <StackPanel Grid.Row="0">
                        <TextBlock Text="Transcribe File"
                                  FontSize="24"
                                  FontWeight="SemiBold"
                                  Foreground="#e0e0e0"
                                  Margin="0,0,0,6"/>
                        <TextBlock Text="Upload any audio or video file and get high-quality transcriptions using advanced AI models. Supports all major formats with automatic conversion for optimal processing."
                                  FontSize="13"
                                  Foreground="#888888"
                                  TextWrapping="Wrap"
                                  LineHeight="22"/>
                    </StackPanel>

                    <!-- Content Body -->
                    <ScrollViewer Grid.Row="1"
                                 Margin="0,24,0,0"
                                 VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- File Upload Section -->
                            <Border Style="{StaticResource ModelCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE8B7;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  FontSize="20"
                                                  Foreground="#3b5bdb"
                                                  Margin="0,0,12,0"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="Select Audio/Video File"
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="#e8e8e8"/>
                                    </StackPanel>

                                    <!-- File Drop Area -->
                                    <Border x:Name="DropZone"
                                           Background="#1a1a1a"
                                           BorderBrush="#3a3a3a"
                                           BorderThickness="2"
                                           CornerRadius="8"
                                           Height="120"
                                           Margin="0,0,0,16"
                                           AllowDrop="True"
                                           Drop="DropZone_Drop"
                                           DragEnter="DropZone_DragEnter"
                                           DragLeave="DropZone_DragLeave">
                                        <StackPanel HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock x:Name="DropText"
                                                      Text="&#xE8B7;"
                                                      FontFamily="Segoe MDL2 Assets"
                                                      FontSize="32"
                                                      Foreground="#666666"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,0,0,8"/>
                                            <TextBlock x:Name="DropLabel"
                                                      Text="Drop files here or click to browse"
                                                      FontSize="14"
                                                      Foreground="#888888"
                                                      HorizontalAlignment="Center"/>
                                            <TextBlock Text="Supports: MP4, AVI, MP3, WAV, M4A, FLAC, and more"
                                                      FontSize="11"
                                                      Foreground="#666666"
                                                      HorizontalAlignment="Center"
                                                      Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- File Info -->
                                    <StackPanel x:Name="FileInfoPanel" Visibility="Collapsed" Margin="0,0,0,16">
                                        <TextBlock Text="Selected File:"
                                                  FontSize="12"
                                                  Foreground="#888888"
                                                  Margin="0,0,0,4"/>
                                        <TextBlock x:Name="FileNameText"
                                                  FontSize="13"
                                                  Foreground="#e0e0e0"
                                                  FontWeight="Medium"/>
                                        <TextBlock x:Name="FileSizeText"
                                                  FontSize="11"
                                                  Foreground="#888888"
                                                  Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Browse Button -->
                                    <Button x:Name="BrowseButton"
                                           Content="Browse Files"
                                           Background="#3b5bdb"
                                           Foreground="White"
                                           BorderThickness="0"
                                           Padding="16,8"
                                           FontSize="13"
                                           HorizontalAlignment="Left"
                                           Click="BrowseButton_Click"/>
                                </StackPanel>
                            </Border>

                            <!-- Model Selection -->
                            <Border Style="{StaticResource ModelCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE7AC;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  FontSize="20"
                                                  Foreground="#3b5bdb"
                                                  Margin="0,0,12,0"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="AI Model Selection"
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="#e8e8e8"/>
                                    </StackPanel>

                                    <ComboBox x:Name="ModelComboBox"
                                             Background="#1a1a1a"
                                             Foreground="#e0e0e0"
                                             BorderBrush="#3a3a3a"
                                             Width="300"
                                             HorizontalAlignment="Left"
                                             Margin="0,0,0,8">
                                        <ComboBoxItem Content="whisper-base" IsSelected="True"/>
                                        <ComboBoxItem Content="whisper-small"/>
                                        <ComboBoxItem Content="whisper-medium"/>
                                        <ComboBoxItem Content="whisper-large"/>
                                    </ComboBox>

                                    <TextBlock Text="Choose the AI model for transcription. Larger models provide better accuracy but take longer to process."
                                              FontSize="11"
                                              Foreground="#888888"
                                              TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Transcription Controls -->
                            <Border Style="{StaticResource ModelCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <Button x:Name="TranscribeButton"
                                               Content="Start Transcription"
                                               Background="#3b5bdb"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Padding="20,10"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               IsEnabled="False"
                                               Click="TranscribeButton_Click"/>

                                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                                            <Ellipse x:Name="StatusIndicator"
                                                    Width="8" Height="8"
                                                    Fill="#666666"
                                                    Margin="0,0,8,0"/>
                                            <TextBlock x:Name="StatusText"
                                                      Text="Select a file to begin"
                                                      FontSize="12"
                                                      Foreground="#888888"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Progress Bar -->
                                    <ProgressBar x:Name="TranscriptionProgress"
                                               Height="6"
                                               Background="#1a1a1a"
                                               Foreground="#3b5bdb"
                                               Visibility="Collapsed"
                                               Margin="0,0,0,8"/>

                                    <TextBlock x:Name="ProgressText"
                                              FontSize="11"
                                              Foreground="#888888"
                                              Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>

                            <!-- Results Section -->
                            <Border Style="{StaticResource ModelCardStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="&#xE8C8;"
                                                  FontFamily="Segoe MDL2 Assets"
                                                  FontSize="20"
                                                  Foreground="#3b5bdb"
                                                  Margin="0,0,12,0"
                                                  VerticalAlignment="Center"/>
                                        <TextBlock Text="Transcription Results"
                                                  FontSize="15"
                                                  FontWeight="SemiBold"
                                                  Foreground="#e8e8e8"/>
                                    </StackPanel>

                                    <ScrollViewer Height="200"
                                                 VerticalScrollBarVisibility="Auto"
                                                 Background="#1a1a1a"
                                                 Padding="12">
                                        <TextBlock x:Name="ResultsTextBlock"
                                                  Text="Transcription results will appear here..."
                                                  FontSize="13"
                                                  Foreground="#e0e0e0"
                                                  TextWrapping="Wrap"
                                                  LineHeight="20"/>
                                    </ScrollViewer>

                                    <!-- Export Options -->
                                    <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                        <Button x:Name="CopyButton"
                                               Content="Copy Text"
                                               Background="Transparent"
                                               Foreground="#3b5bdb"
                                               BorderBrush="#3b5bdb"
                                               BorderThickness="1"
                                               Padding="12,6"
                                               FontSize="12"
                                               IsEnabled="False"
                                               Click="CopyButton_Click"/>

                                        <Button x:Name="SaveButton"
                                               Content="Save as TXT"
                                               Background="Transparent"
                                               Foreground="#3b5bdb"
                                               BorderBrush="#3b5bdb"
                                               BorderThickness="1"
                                               Padding="12,6"
                                               FontSize="12"
                                               Margin="8,0,0,0"
                                               IsEnabled="False"
                                               Click="SaveButton_Click"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>