{
  "name": "asrpro",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "WEBKIT_DISABLE_COMPOSITING_MODE=1 tauri dev",
    "backend": "cd sidecar && (test -d venv || npm run backend:setup) && source venv/bin/activate && python main.py",
    "backend:setup": "cd sidecar && python3 -m venv venv && source venv/bin/activate && pip install --upgrade pip && pip install -r requirements.txt",
    "backend:test": "cd sidecar && source venv/bin/activate && python main.py --test",
    "electron": "cd electron && npm run dev",
    "electron:dev": "concurrently \"npm run dev\" \"cd electron && npm run dev\"",
    "electron:build": "npm run build && cd electron && npm run dist",
    "electron:build:win": "npm run build && cd electron && npm run dist:win",
    "electron:build:mac": "npm run build && cd electron && npm run dist:mac",
    "electron:build:linux": "npm run build && cd electron && npm run dist:linux",
    "electron:pack": "npm run build && cd electron && npm run pack"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.8.0",
    "@tauri-apps/plugin-dialog": "^2",
    "@tauri-apps/plugin-fs": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tauri-apps/cli": "^2.8.4",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.0.4",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.surajmandal.asrpro",
    "productName": "ASR Pro",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/dist/**/*",
      "electron/backend/**/*",
      "resources/**/*"
    ],
    "extraResources": [
      {
        "from": "sidecar",
        "to": "sidecar"
      },
      {
        "from": "docker",
        "to": "docker"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
