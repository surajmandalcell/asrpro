{
  "name": "asrpro-electron",
  "version": "0.1.0",
  "description": "ASR Pro Electron Main Process",
  "main": "dist/main.js",
  "scripts": {
    "compile": "tsc",
    "watch": "tsc --watch",
    "start": "npm run compile && electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on dist/main.js && electron .\"",
    "pack": "npm run compile && electron-builder --dir",
    "dist": "npm run compile && electron-builder",
    "dist:win": "npm run compile && electron-builder --win",
    "dist:mac": "npm run compile && electron-builder --mac",
    "dist:linux": "npm run compile && electron-builder --linux"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "socket.io": "^4.7.2",
    "dockerode": "^3.3.5",
    "fluent-ffmpeg": "^2.1.2",
    "electron-store": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.surajmandal.asrpro",
    "productName": "ASR Pro",
    "directories": {
      "output": "../release"
    },
    "files": [
      "dist/**/*",
      "../dist/**/*",
      "../resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}